<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent">


    <androidx.cardview.widget.CardView
        android:id="@+id/tierscv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_20dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="@dimen/_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tierslayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/tierbg"
                android:layout_width="@dimen/_250dp"
                android:layout_height="@dimen/_120dp"
                android:scaleType="fitXY"
                android:src="@drawable/tiersbg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/tiersic"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:layout_marginStart="@dimen/_20dp"
                android:src="@drawable/tiers_ic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tierbg"
                app:layout_constraintTop_toTopOf="@+id/tierbg" />

            <TextView
                android:id="@+id/tierstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:fontFamily="@font/monumentextended_regular"
                android:text="@string/immortal_3"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/tiersic"
                app:layout_constraintStart_toEndOf="@id/tiersic"
                app:layout_constraintTop_toTopOf="@id/tiersic" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>